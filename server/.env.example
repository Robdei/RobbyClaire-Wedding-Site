# ============================================================
# WEDDING RSVP SERVER - ENVIRONMENT VARIABLES (TEMPLATE)
# ============================================================
# Copy this file to .env and replace values with secure secrets
# DO NOT commit .env to version control!

# Admin API Key - Used to authenticate admin endpoints
# Generate a secure random string for production
ADMIN_API_KEY=your_secure_api_key_here

# Rate Limiting Configuration
# Window in milliseconds (default: 3600000 = 1 hour)
RATE_LIMIT_WINDOW_MS=3600000

# Maximum requests per window (default: 5 per hour)
RATE_LIMIT_MAX_REQUESTS=5

# Server Port (optional, defaults to 3000)
PORT=3000
